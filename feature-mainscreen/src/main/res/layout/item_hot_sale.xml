<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:paddingHorizontal="@dimen/margin_16">

    <ImageView
        android:id="@+id/hotSaleImageView"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_gravity="end"
        android:scaleType="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_32"
        android:layout_marginTop="@dimen/margin_16"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/newTagContainer"
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:background="@drawable/round_shape_orange">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/orange"
                android:text="@string/new_string"
                android:textColor="@color/white"
                android:textSize="10dp"
                tools:ignore="SpUsage" />

        </FrameLayout>

        <TextView
            android:id="@+id/titleHotSaleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:maxLines="2"
            android:maxWidth="110dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeTextType="uniform"
            tools:text="Iphone 12" />

        <TextView
            android:id="@+id/subtitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:lines="1"
            android:maxWidth="110dp"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeTextType="uniform"
            tools:text="Iphone 12" />

    </LinearLayout>

</FrameLayout>